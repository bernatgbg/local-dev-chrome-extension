{
  "manifest_version": 3,
  "name": "Local Login Redirector",
  "version": "1.0",
  "permissions": [
    "webRequest",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "activeTab"
  ],
  "host_permissions": [
    "https://test-mfa.auth.gbgplc.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://investigate-qa.ext.inv.gbgplc.com/*",
        "https://investigate-ci.ext.inv.gbgplc.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
